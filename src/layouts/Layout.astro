---
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/src/assets/stressfulDev-logo.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Roboto:wght@400;500;700&family=Roboto+Mono:wght@400;500;700&display=swap" rel="stylesheet">
		<title>{title || 'StressfulDev'}</title>
	</head>
	<body class="min-h-screen w-full m-0 bg-gradient-to-br from-gray-900 via-black to-green-900 text-white font-body">
		<Header title={title} />
		<main class="container mx-auto px-4 pt-20">
			<slot />
		</main>
	</body>
</html>
